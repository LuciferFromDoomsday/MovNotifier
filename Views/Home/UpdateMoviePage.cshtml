
@{
    ViewData["AdminTitle"] = "Movies";
    Layout = "_LayoutAdmin";
}
@model dynamic
<div class="wrapper" style="margin-top: 20px; ">
    <div class="main">
        <div class="container-1">


            <div class="row">
                <div style="padding: 30px;">
                    <form method="post" asp-controller="Home" asp-action="UpdateMovie">
                        <div class="form-group ">
                            <label class="control-label requiredField" for="Title">
                                Title
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <input class="form-control" id="Title" name="Title" type="text" value="@Model.CurrentMovie.Title" />
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="Runtime">
                                Runtime
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <input class="form-control" id="Runtime" name="Runtime" type="text" value="@Model.CurrentMovie.Runtime" />
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="Director">
                                Select a Director
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <select class="select form-control" id="Directors" name="Directors">
                                @foreach (Director c in Model.Directors)
                                {
                                    <option value="@c.Id">
                                        @Html.DisplayFor(modelItem => c.name)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="Country">
                                Select a Made Country
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <select class="select form-control" id="Country" name="Country">
                                @foreach (Country c in Model.Countries)
                                {
                                    <option value="@c.ID">
                                        @Html.DisplayFor(modelItem => c.name)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="Poster">
                                Poster URL
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <input class="form-control" id="Poster" name="Poster" type="text" value="@Model.CurrentMovie.Poster" />
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="ReleasDate">
                                Release Date
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <input class="form-control" id="ReleasDate" name="ReleasDate" placeholder="MM/DD/YYYY" type="date" value="@Model.CurrentMovie.ReleasDate" />
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="AvgRating">
                                Average Rating
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <input class="form-control" id="AvgRating" name="AvgRating" type="text" value="@Model.CurrentMovie.AvgRating" />
                        </div>
                        <div class="form-group ">
                            <label class="control-label requiredField" for="textarea">
                                Movie Description
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <textarea class="form-control" cols="40" id="textarea" name="Description" placeholder="Description" rows="10">

                                    @Model.CurrentMovie.Description

                            </textarea>
                        </div>

                        <div class="form-group">
                            <div>
                                <input type="hidden" name="Id" value=" @Model.Id" />
                                <button class="btn btn-primary " name="submit" type="submit">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>